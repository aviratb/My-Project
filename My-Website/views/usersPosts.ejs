<%- include('header') %>

  <div class="container-fluid text-center">
    <div class="row content">

      <div class="col-sm-2 sidenav">
        <div class="well">
          <p><a href="#employeeForm">Employee Form</a></p>
          <p><a href="#employeeTable">Employee Table</a></p>
        </div>
      </div>

      <div class="col-sm-8 text-left">
        <div class="jumbotron text-center">
          <div data-aos="fade-up">
            <h1>
              <%= title %>
            </h1>
          </div>
        </div>
        <hr>
        <div class="row">
          <div id="signupbox" class="mainbox col-md-10 col-md-offset-1 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
              <div class="panel-heading text-center">
                <div class="panel-title">Message Post Form</div>
              </div>
              <div class="panel-body">
                <form action="/users_posts" id="employeeForm" class="form-horizontal" method="post" role="form">

                  <div id="signupalert" style="display:none" class="alert alert-danger">
                    <p>Error:</p>
                    <span></span>
                  </div>

                  <div class="form-group">
                    <label for="firstname" class="col-md-3 control-label">Name :</label>
                    <div class="col-md-9">
                      <input type="text" class="form-control" name="name" placeholder="Enter your name" required>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="email" class="col-md-3 control-label">Email :</label>
                    <div class="col-md-9">
                      <input type="email" class="form-control" name="email" placeholder="Enter your email address" required>
                    </div>
                  </div>

                  <!--<div class="form-group">
                    <label for="lastname" class="col-md-3 control-label">Employee Type :</label>
                    <div class="col-md-9">
                      <select class="form-control" name="emptype" required>
                        <option value="Hourly">Hourly</option>
                        <option value="Fixed">Fixed</option>
                      </select>
                    </div>
                  </div>-->

                  <div class="form-group">
                    <label for="comments" class="col-md-3 control-label">Message :</label>
                    <div class="col-md-9">
                      <textarea name="message" class="form-control" id="message" cols="3" rows="5"
                        placeholder="Enter your message....." title="Please enter your message (at least 10 characters)"
                        required></textarea><br>
                    </div>
                  </div>

                  <!--<% if (success=="Record Inserted Successfully." || success=="Record Updated Successfully." ) { %>
                    <div class="form-group">
                      <div class="col-md-offset-3 col-md-9">
                        <div class="alert alert-success alert-dismissible">
                          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                          <strong>Success!</strong>
                          <%= success %>
                        </div>
                      </div>
                    </div>
                    <% } else if (success=="Duplicate data cannot be inserted." ) { %>
                      <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                          <div class="alert alert-warning alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Sorry!</strong>
                            <%= success %>
                          </div>
                        </div>
                      </div>
                      <% } else if (success=="Record Deleted." ) { %>
                        <div class="form-group">
                          <div class="col-md-offset-3 col-md-9">
                            <div class="alert alert-danger alert-dismissible">
                              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                              <strong></strong>
                              <%= success %>
                            </div>
                          </div>
                        </div>
                        <% } %>-->

                  <div class="form-group">
                    <!-- Button -->
                    <div class="col-md-offset-3 col-md-9">
                      <input type="submit" name="post" value="Post" class="btn btn-primary">
                    </div>
                  </div>

                </form>
              </div>
            </div>
          </div>
        </div>
        <br id="lineBreak"><br><br><br>
        <!--<input id="search" type="text" placeholder="Search Table..."> <br><br>-->
        <div>Posts written by our website visitors.</div> <br>
        <div class="container">
          <div class="row">
            <% posts.forEach(function(row){ %>
              <div class="col-sm-3 well">
                Name : <%= row.name %> <br>
                  Email : <%= row.email %> <br>
                    Message : <%= row.message %> 
              </div>
              <% }) %>
          </div>
        </div>
      </div>

      <div class="col-sm-2 sidenav">
        <div class="well">
          <p class="msgGame">Feeling Bored?</p>
          <p>Lets play a game to freshen up your mood....</p>
          <a href="/game" class="btn btn-success" role="button" target="_blank">Click Here</a>
        </div>
      </div>

    </div>
  </div>

  <%- include('footer') %>