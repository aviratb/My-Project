<%- include('header') %>

    <div class="container-fluid text-center">
        <div class="row content">

            <div class="col-sm-2 sidenav">
                <div class="well">
                    <p><a href="/admin/products">Product Details</a></p>
                    <p><a href="/admin/orders">Order Details</a></p>
                </div>
            </div>

            <div class="col-sm-8 text-left">
                <div class="jumbotron text-center">
                    <div data-aos="fade-up">
                        <h1>
                            <%= title %>
                        </h1>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div id="signupbox" class="mainbox col-md-7 col-md-offset-2 col-sm-8 col-sm-offset-2">
                        <div class="panel panel-info">
                            <div class="panel-heading text-center">
                                <div class="panel-title">Product Availability Form</div>
                            </div>
                            <div class="panel-body">
                                <form action="/admin/products" id="employeeForm" class="form-horizontal" method="post"
                                    role="form">

                                    <div id="signupalert" style="display:none" class="alert alert-danger">
                                        <p>Error:</p>
                                        <span></span>
                                    </div>

                                    <div class="form-group">
                                        <label for="lastname" class="col-md-4 control-label">Product :</label>
                                        <div class="col-md-5">
                                            <select class="form-control" name="product" required>
                                                <option value="Kinley 20L Jar">Kinley 20L Jar</option>
                                                <option value="Bisleri 250ML Carton">Bisleri 250ML Carton</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="firstname" class="col-md-4 control-label">In Stock Qty :</label>
                                        <div class="col-md-8">
                                            <input type="number" class="form-control" name="inStockQty"
                                                placeholder="Enter no. of product available In Stock" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="lastname" class="col-md-4 control-label">Warehouse :</label>
                                        <div class="col-md-5">
                                            <select class="form-control" name="warehouse" required>
                                                <option value="Mumbai North">Mumbai North</option>
                                                <option value="Mumbai South">Mumbai South</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!--<% if (success=="Record Inserted Successfully." || success=="Record Updated Successfully." ) { %>
                    <div class="form-group">
                      <div class="col-md-offset-3 col-md-9">
                        <div class="alert alert-success alert-dismissible">
                          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                          <strong>Success!</strong>
                          <%= success %>
                        </div>
                      </div>
                    </div>
                    <% } else if (success=="Duplicate data cannot be inserted." ) { %>
                      <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                          <div class="alert alert-warning alert-dismissible">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            <strong>Sorry!</strong>
                            <%= success %>
                          </div>
                        </div>
                      </div>
                      <% } else if (success=="Record Deleted." ) { %>
                        <div class="form-group">
                          <div class="col-md-offset-3 col-md-9">
                            <div class="alert alert-danger alert-dismissible">
                              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                              <strong></strong>
                              <%= success %>
                            </div>
                          </div>
                        </div>
                        <% } %>-->

                                    <div class="form-group">
                                        <!-- Button -->
                                        <div class="col-md-offset-4 col-md-9">
                                            <input type="submit" name="add" value="Add the Product"
                                                class="btn btn-primary">
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <br id="lineBreak"><br><br><br>
                <!--<input id="search" type="text" placeholder="Search Table..."> <br><br>-->
                <div class="msgGame">List of Products Available In Stock.....</div> <br>
                <table class="table table-striped table-primary">
                    <thead>
                        <tr>
                            <th>Products</th>
                            <th>In Stock Qty</th>
                            <th>Warehouse</th>
                        </tr>
                    </thead>
                    <tbody id="productTable">
                        <% products.forEach(function(row){ %>
                            <tr>
                                <td>
                                    <%= row.product %>
                                </td>
                                <td>
                                    <%= row.inStockQty %>
                                </td>
                                <td>
                                    <%= row.warehouse %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="col-sm-2 sidenav">
                <div class="well">
                </div>
            </div>

        </div>
    </div>

    <%- include('footer') %>