<%- include('header') %>

    <div class="container-fluid text-center">
        <div class="row content">

            <div class="col-sm-2 sidenav">
                <div class="well">
                    <p><a href="/admin/products">Product Details</a></p>
                    <p><a href="/admin/orders">Order Details</a></p>
                </div>
            </div>

            <div class="col-sm-8 text-left">
                <div class="jumbotron text-center">
                    <div data-aos="fade-up">
                        <h1>
                            <%= title %>
                        </h1>
                    </div>
                </div>
                <hr>
                <div class="msgGame">List of Orders Placed By Customers.....</div> <br>
                <table class="table table-striped table-primary">
                    <thead>
                        <tr>
                            <th>Customer Name</th>
                            <th>Products</th>
                            <th>Quantity Requested</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="orderTable">
                        <% orders.forEach(function(row){ %>
                            <tr>
                                <td>
                                    <%= row.customerName %>
                                </td>
                                <td>
                                    <%= row.product %>
                                </td>
                                <td>
                                    <%= row.quantity %>
                                </td>
                                <td>
                                    <%= row.status %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="col-sm-2 sidenav">
                <div class="well">
                </div>
            </div>

        </div>
    </div>

    <%- include('footer') %>